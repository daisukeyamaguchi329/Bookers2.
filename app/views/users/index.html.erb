<%= render 'books/list',book: @book_new, user: @user%>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table'>
  <thead>

    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
     </tr>


  </thead>
  <tbody>
    <% @users.each do |user| %>
     <tr>
      <th> <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></th>
      <th><%= user.name %></th>
      <th><%=link_to "Show",user_path(user.id) %></th>
     </tr>
    <% end %>
  </tbody>

  </table>
</div>


